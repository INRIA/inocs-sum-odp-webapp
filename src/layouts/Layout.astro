---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import { SidebarMenu, SiteNavBar } from "../components/react/ui";
import ApiClient from "../lib/api-client/ApiClient";
import { getUrl } from "../lib/helpers";

interface Props {
  role?: "visitor" | "editor" | "admin";
}

const { role = "visitor" } = Astro.props;
const api = new ApiClient(Astro.request);
const labs = await api.getLivingLabs([]);
const labsItems = labs?.map((lab) => ({
  href: getUrl(`/living-lab-city/${lab.id}`),
  label: lab.name,
}));

const userInfo = Astro.locals.user
  ? {
      name: Astro.locals.user?.name ?? "User",
      email: Astro.locals.user?.email ?? "",
    }
  : undefined;

const currentLivingLab = Astro.locals.livingLab;

const menuItems = [
  {
    label: "Home",
    href: getUrl("/"),
  },
  {
    label: "Living Labs",
    subItems: labsItems,
  },
  {
    label: "Data",
    subItems: [
      // { href: "#", label: "KPIs" },
      { href: "/data/measures", label: "Measures" },
      // { href: "#", label: "Modal split" },
    ],
  },
  // {
  //   label: "Analysis Tools",
  //   subItems: [
  //     { href: "#", label: "Measures impact" },
  //     { href: "#", label: "Multiâ€‘criteria decision tool" },
  //   ],
  // },
];

const footerMenuItems = [
  {
    title: "Open Data Platform",
    items: [
      { label: "About", href: getUrl("/") },
      { label: "Measures", href: getUrl("/data/measures") },
      // { label: "Analysis Tools", href: "#" },
    ],
  },
  {
    title: "SUM project",
    items: [
      {
        label: "About",
        href: "https://sum-project.eu/about",
      },
      { label: "Partners", href: "https://sum-project.eu/partners" },
      { label: "Resources", href: "https://sum-project.eu/resources/" },
      { label: "Contact", href: "https://sum-project.eu/contact/" },
    ],
  },
  {
    title: "Living Labs",
    items: labsItems,
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href={getUrl("/favicon.ico")} />
    <meta name="generator" content={Astro.generator} />
    <title>SUM Open Data Platform</title>

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href={getUrl("/apple-touch-icon.png")}
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href={getUrl("/favicon-32x32.png")}
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href={getUrl("/favicon-16x16.png")}
    />
    <link rel="manifest" href={getUrl("/site.webmanifest")} />
  </head>
  <body>
    {
      role === "visitor" && (
        <SiteNavBar
          menuItems={menuItems}
          userInfo={userInfo}
          currentLivingLab={currentLivingLab}
          client:load
        >
          <slot />
        </SiteNavBar>
      )
    }
    {
      role === "editor" && (
        <SidebarMenu
          userInfo={userInfo}
          currentLivingLab={currentLivingLab}
          client:load
        >
          <slot />
        </SidebarMenu>
      )
    }

    <Footer sections={footerMenuItems} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
